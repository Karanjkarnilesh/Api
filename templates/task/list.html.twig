{% include "base.html.twig" %}

<div class="example-wrapper">
{% if students %}
<div class="container m-4">
<div style="text-align:end">
<a href="{{path('task')}}" class="btn btn-primary">Add</a>
</div>
 <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">student Name</th>
      <th scope="col"> Student Last</th>
      <th scope="col">Student Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for student in students %}
    <tr>
      <th scope="row">{{student.getId()}}</th>
   <td>{{student.getStudentName()}}</td>
   <td>{{student.getStudentLast()}}</td>
   <td>{{student.getStudentEmail()}}</td>
   <td><a class="btn btn-primary" href="{{ path('taskupdate', {'id':student.getId() }) }}">Edit </a> <a class="btn btn-danger" href="{{ path('taskdelete', {'id':student.getId() }) }}">Delete </a></td>
    </tr>
    {% endfor %}
   
  </tbody>
</table>
</div>
{% endif %}
</div>