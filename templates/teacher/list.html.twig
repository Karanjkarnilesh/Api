{% include "base.html.twig" %}

<div class="example-wrapper">
{% if teachers %}
<div class="container m-4">

{% for label, messages in app.flashes(['success', 'warning']) %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<div style="text-align:end">

<a href="{{path('teachercreate')}}" class="btn btn-primary">Add</a>
</div>
 <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Teacher Name</th>
      <th scope="col"> Teacher Designation</th>
      <th scope="col">Teacher Salary</th>
       <th scope="col">Teacher Class</th>
       {# <th scope="col">Teacher Created At</th> #}
       {# <th scope="col">Teacher Update At</th> #}
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for teacher in teachers %}
    <tr>
      <th scope="row">{{teacher.getId()}}</th>
   <td>{{teacher.getName()}}</td>
   <td>{{teacher.getDesignation()}}</td>
   <td>{{teacher.getSalary()}}</td>
   <td>{{teacher.getClass()}}</td>
   {# <td>{{teacher.getCreateAt()}}</td>
   <td>{{teacher.getUpdateAt()}}</td> #}
   <td><a class="btn btn-primary" href="{{ path('teacherupdate', {'id':teacher.getId() }) }}">Edit </a> <a class="btn btn-danger me-2" href="{{ path('teacherdelete', {'id':teacher.getId() }) }}">Delete </a></td>
    </tr>
    {% endfor %}
   
  </tbody>
</table>
<form method="post" action="{{path('teachersearch')}}">
<div class="row">
  <div class="mb-3 " style="text-align:end">    
   <input type="text" class="" name="_search" id="search">
 <button type="submit" class="btn btn-primary">Search</button>
</div>
 </div>
</form>

</div>
{% endif %}

</div>